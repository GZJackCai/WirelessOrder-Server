<%= display_header(NAV1[:dish_type]) %>

<div
<% if flash[:notice] %> class="alert"
<% end %>>
  <%= flash[:notice] %>
</div>


<script type="text/javascript">
    var validateRoot = "http://" + document.location.host;
    function changeStyle(n) {
        var uri = "/dishes/select_type?type=" + n;
        var xmlHttp = null;
        if (window.XMLHttpRequest) {// code for IE7, Firefox, Opera, etc.
            xmlHttp = new XMLHttpRequest();
        }
        else if (window.ActiveXObject) {// code for IE6, IE5
            xmlHttp = new ActiveXObject("Microsoft.XMLHTTP");
        }
        if (xmlHttp != null) {
            xmlHttp.open("GET", uri, false);
            xmlHttp.send(null);
            return true;
        }
        else {
            alert("Your browser does not support XMLHTTP.");
            return false
        }
    }

</script>

<div class="title-main">
  <div class="title-left">
    <% if @list.blank? %>
        暂无类别
    <% else %>
        类别列表
    <% end %>
  </div>
  <div class="title-right">
    <%= link_to '添加新类别', '/dish_types/new', :method => :get, :class => 'btn btn-large' %>
  </div>
</div>


<!--t.string   "name"-->
<!--t.string   "describe"-->
<!--t.datetime "created_at"-->
<!--t.datetime "updated_at"-->

<div style="clear: both; ">
  <% if @list.count > 0 %>
      <table class="table table-striped table-bordered">
        <thead>
        <th width="15%">类别</th>
        <th width="50%">描述</th>
        <th width="20%">创建时间</th>
        <th>修改</th>
        <th>删除</th>
        </thead>
        <% @list.each do |l| %>
            <tr>
              <td>
                <%= link_to l.name, '/dishes', :onclick => "return changeStyle(#{l.id})" %>
              </td>

              <td>
                <%= link_to l.describe, "/dish_types/#{l.id}" %>
              </td>
              <td>
                <%= l.created_at.strftime('%Y年%m月%d日   %H:%M:%S') %></td>
              </td>
              <td>
                <%= link_to '修改', "/dish_types/#{l.id}/edit", :method => :get %>
              </td>
              <td>
                <%= link_to '删除', "/dish_types/#{l.id}", :method => :delete, data: {confirm: "该类别下所有菜品信息都会删除，\n确定要删除吗?"} %>
              </td>
            </tr>
        <% end %>

      </table>
      <%= will_paginate @list, :previous_label => '上一页', :next_label => '下一页' %>
  <% else %>
      <div class="main-container">没有找到数据</div>

  <% end %>
</div>